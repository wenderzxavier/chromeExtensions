{
  "manifest_version": 2,
  "name": "Budget Manager",
  "version": "1.0",
  "description": "This extension tracks your overall spendings.",
  "icons": {
    "192": "icon192.png",
    "32": "icon32.png",
    "16": "icon16.png"
  },
  "permissions": ["storage", "notifications", "contextMenus"],
  "browser_action": {
    "default_icon": "icon16.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  }
}
